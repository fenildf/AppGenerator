<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_loading_view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_loading_view_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_loading" />

        <TextView
            android:id="@+id/tv_loading_view_loading_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loading_dialog_margin_top"
            android:text="@string/common_loading"
            android:textColor="@color/gjfax_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loading_view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_loading_view_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_loading" />

        <TextView
            android:id="@+id/tv_loading_view_error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loading_dialog_margin_top"
            android:text="@string/loading_error_refresh"
            android:textColor="@color/gjfax_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loading_view_suc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_loading_view_suc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_loading" />

        <TextView
            android:id="@+id/tv_loading_view_suc_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loading_dialog_margin_top"
            android:textColor="@color/gjfax_gray" />
    </LinearLayout>

</FrameLayout>