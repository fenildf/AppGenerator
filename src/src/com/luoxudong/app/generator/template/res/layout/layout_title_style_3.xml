<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_title"/>
    
    <Button 
        android:id="@+id/btn_title_right_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:layout_marginRight="@dimen/common_title_margin_r"
        android:background="@android:color/transparent"
        android:textSize="@dimen/common_title_right_text"
        android:textColor="@color/btn_title_text"
        android:text="@string/common_title_reg"/>
    
</RelativeLayout>